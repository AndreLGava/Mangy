<div class="page-header">
  <%= link_to sprints_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_sprint_path(@sprint), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show sprint</h1>
</div>

<dl class="dl-horizontal">
  <dt>Start:</dt>
  <dd><%= @sprint.start %></dd>

  <dt>Done:</dt>
  <dd><%= @sprint.done %></dd>

  <dt>Meta:</dt>
  <dd><%= @sprint.meta %></dd>

</dl>

<%= simple_form_for @sistem, html: { class: "form-horizontal", role: "form" } do |f| %>
  <% if @sistem.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@sistem.errors.count, "error") %> prohibited this sistem from being saved:</h4>

      <ul>
      <% @sistem.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :sistem, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
       <%= f.association :sistem, collection: Sistem.order(description: :ASC), label_method: :description, value_method: :id, include_blank: true, label: false, class: "form-control select" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<script>  
  $('#sistem_categories').bootstrapDualListbox({});
</script>
<div class="page-header">
  <%= link_to new_talk_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Talk
  <% end %>
  <h1>Listing talks</h1>
</div>

<div class="table-responsive panel panel-default tableable">
  <table class="table table-striped table-bordered table-hover tablesorter">
    <thead>
      <tr>
            <th class="sortable">Who</th>
            <th class="sortable">When?</th>
            <th class="sortable">Said</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @talks) do |talk| %>
            <td><%= raw talk.who %></td>
            <td><%= raw talk.created_at %></td>
            <td><%= raw talk.said %></td>
            <td><%= link_to 'Show', talk %></td>
        <td><%= link_to 'Edit', edit_talk_path(talk) %></td>
        <td><%= link_to 'Destroy', talk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
<script>
  $(document).ready(function(){
    agora();
  });
</script>
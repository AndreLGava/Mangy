<div class="page-header">
  <%= link_to versions_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_version_path(@version), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show version</h1>
</div>

<div class="talbe-responsive">
  <table class="table table-striped table-hover">
    <tr>
      <td>Responsable: <%= @version.responsable %></td>
      <td>Used user: <%= @version.used_user %></td>
      <td>System: <%= @version.system %></td>
    </tr>
    <tr>
      <td>Start: <%= @version.start %></td>
      <td colspan="2">Finish: <%= @version.finish %></td>
    </tr>
    <tr>
      <td>Observation: <%= @version.observation %></td>
      <td colspan="2">Impediment: <%= @version.impediment %></td>
    </tr>
  </table>
</div>
<br>
<div class="talbe-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr> 
            <th>Description</th>
            <th>Settings</th>
            <th>File</th>
            <th>Status</th>
            <th>Expected result</th>
            <th>Obtained result</th>
            <th>Impact</th>
            <th>Check</th>
            <th>Options</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @version_tests) do |version_test| %>
          <tr class="<%= version_test.done %>">
            <td><%= version_test.test.description %></td>
            <td><%= version_test.test.settings %></td>
            <td><%= version_test.test.file %></td>
            <td><%= version_test.test.status %></td>
            <td><%= version_test.test.expected_result %></td>
            <td><%= version_test.obtained_result %></td>
            <td><%= version_test.impact %></td>
            <td><%= check_box(version_test.check,version_test.check) %></td>
            <td>              
              <!-- Single button -->
              <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                   <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                  <li><a href="#">Delete Item</a></li>
                  <li><a href="#">Edit Item</a></li>
                  <li role="separator" class="divider"></li>
                  <li><a href="#">Create an Issue</a></li>
                </ul>
              </div>
            </td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>
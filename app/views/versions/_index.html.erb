<div class="table-responsive panel panel-default">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Responsable</th>
            <th>Used user</th>
            <th>Sistem</th>
            <th>Observation</th>
            <th>Impediment</th>
            <th>Start</th>
            <th>Finish</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @versions) do |version| %>
          <tr class="<%= version.done_version %>">
            <td><%= version.responsable %></td>
            <td><%= version.used_user %></td>
            <td><%= raw version.sistem.description %></td>
            <td><%= raw version.observation %></td>
            <td><%= raw version.impediment %></td>
            <td><%= version.start %></td>
            <td><%= version.finish %></td>
            <td><%= link_to 'Show', version %></td>
            <td><%= link_to 'Edit', edit_version_path(version) %></td>
            <td><%= link_to 'Destroy', version, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>

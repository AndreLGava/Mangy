<%= simple_form_for @version, html: { class: "form-horizontal", role: "form" } do |f| %>
  <% if @version.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@version.errors.count, "error") %> prohibited this version from being saved:</h4>

      <ul>
      <% @version.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :responsable, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :responsable, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :used_user, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :used_user, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sistem, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.association :sistem, collection: Sistem.order(description: :ASC), label_method: :description, value_method: :id, include_blank: false, label: false, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :category, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.input :category, collection: @category, selected: @selected_categories, label_method: :description, value_method: :id, label: false, include_blank: false, input_html: { class: 'dualList', multiple: true} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :observation, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :observation, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :impediment, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :impediment, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.input :start, class: "form-control", label: false %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :finish, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.input :finish, class: "form-control",  as: :date, include_blank: true , label: false%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<script>
  $( document ).ready(function() {
      $(".dualList").bootstrapDualListbox({ });
  });
</script>


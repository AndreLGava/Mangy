<div class="page-header">
  <%= link_to new_test_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Test
  <% end %>
  <%= link_to tests_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_test_path(@test), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show test</h1>
</div>

<dl class="dl-horizontal">
  <dt>Description:</dt>
  <dd><%= @test.description %></dd>

  <dt>Settings:</dt>
  <dd><%= @test.settings %></dd>

  <dt>File:</dt>
  <dd><%= @test.file %></dd>

  <dt>Expected result:</dt>
  <dd><%= @test.expected_result %></dd>

  <dt>Status:</dt>
  <dd><%= @test.status %></dd>

</dl>

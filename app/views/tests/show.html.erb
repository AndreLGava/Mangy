<div class="page-header">
  <%= link_to new_test_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Test
  <% end %>
  <%= link_to tests_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_test_path(@test), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show test</h1>
</div>

<dl class="dl-horizontal">
  <dt>Description:</dt>
  <dd><%= raw @test.description %></dd>

  <dt>Settings:</dt>
  <dd><%= raw @test.settings %></dd>

  <dt>File:</dt>
  <dd><%= raw @test.file %></dd>

  <dt>Expected result:</dt>
  <dd><%= raw @test.expected_result %></dd>

  <dt>Status:</dt>
  <dd><%= raw @test.status %></dd>

  <dt>Category:</dt>
  <dd><%= raw @test.category.description %></dd>

  <dt>Context:</dt>
  <dd>
    <% @test.destinys.each do |origem| %>
      <%= link_to origem.origin.id, origem.origin, class: 'label label-info', target: "_blank", title: origem.origin.description.html_safe unless origem.origin.nil?%>
    <% end %>
  </dd>
  <dt>Dependency:</dt>
  <dd>
    <% @test.pos.each do |origem| %>
        <%= link_to origem.pre.id, origem.pre, class: 'label label-danger', target: "_blank", title: origem.pre.settings.html_safe unless origem.pre.nil?%>
    <% end %>
  </dd>
</dl>

<div class="page-header">
  <%= link_to new_test_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Test
  <% end %>
  <h1>Listing tests</h1>
</div>

<div class="table-responsive panel panel-default" >
  <table class="table table-striped table-bordered table-hover" id="sortable">
    <thead>
      <tr>
            <th>Id</th>
            <th>Description</th>
            <th>Settings</th>
            <th>File</th>
            <th>Expected result</th>
            <th>Status</th>
            <th>Category</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @tests.each do |test| %>
        <tr data-item-id=<%= "#{test.id}" %> class="item">
            <td><%= test.id %></td>
            <td><%= test.description %></td>
            <td><%= test.settings %></td>
            <td><%= test.file %></td>
            <td><%= test.expected_result %></td>
            <td><%= test.status %></td>
            <td><%= test.category.description %></td>
            <td><%= link_to 'Show', test %></td>
            <td><%= link_to 'Edit', edit_test_path(test) %></td>
            <td><%= link_to 'Destroy', test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

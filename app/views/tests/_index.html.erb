<div class="table-responsive panel panel-default" >
  <table class="table table-striped table-bordered table-hover" id="sortable">
    <thead>
      <tr>
            <th>Id</th>
            <th>Description</th>
            <th>Settings</th>
            <th>File</th>
            <th>Expected result</th>
            <th>Status</th>
            <th>Category</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @tests.each do |test| %>
        <tr data-item-id=<%= "#{test.id}" %> class="item">
            <td><%= raw test.id %></td>
            <td><%= raw test.description %></td>
            <td><%= raw test.settings %></td>
            <td><%= raw test.file %></td>
            <td><%= raw test.expected_result %></td>
            <td><%= raw test.status %></td>
            <td><%= raw test.category.description unless test.category.nil? %></td>
            <td><%= link_to 'Show', test %></td>
            <td><%= link_to 'Edit', edit_test_path(test) %></td>
            <td><%= link_to 'Destroy', test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

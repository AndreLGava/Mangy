<div class="page-header">
  <%= link_to new_issue_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Issue
  <% end %>
  <h1>Listing issues</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Link</th>
            <th>Done</th>
            <th>Available for test</th>
            <th>Real problem</th>
            <th>Version test</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @issues) do |issue| %>
            <td><%= issue.link %></td>
            <td><%= issue.done %></td>
            <td><%= issue.available_for_test %></td>
            <td><%= issue.real_problem %></td>
            <td><%= issue.version_test %></td>
            <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>

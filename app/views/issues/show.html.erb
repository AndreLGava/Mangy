<div class="page-header">
  <%= link_to issues_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_issue_path(@issue), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show issue</h1>
</div>

<dl class="dl-horizontal">
  <dt>Link:</dt>
  <dd><%= @issue.link %></dd>

  <dt>Done:</dt>
  <dd><%= @issue.done %></dd>

  <dt>Available for test:</dt>
  <dd><%= @issue.available_for_test %></dd>

  <dt>Real problem:</dt>
  <dd><%= @issue.real_problem %></dd>

  <dt>Version test:</dt>
  <dd><%= @issue.version_test %></dd>

</dl>
